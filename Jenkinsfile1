pipeline {
  environment {
    registry = 'mstarin1010/final-project'
    registryCredential = 'dockerid'
    dockerImage = 'mstarin1010/final-project'
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/mstarin1010/final.git'
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
  }
}
